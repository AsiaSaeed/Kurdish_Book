<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f9ff"
    android:orientation="vertical"
    tools:context=".RahenaniEak">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/genral_ma_pa"
            android:background="@drawable/wena_background"
            android:gravity="center"
            android:text="وانەی ١"
            android:textColor="#ed2b2b"
            android:textSize="40sp" />


            <TextView
                android:id="@+id/bbynaw_ble_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/genral_ma_pa"
                android:background="@drawable/red_text_view_background"
                android:text="ببینە و بلی "
                android:textSize="30sp" />



        <ImageView
            android:id="@+id/amad_iv"
            android:layout_width="match_parent"
            android:layout_height="309dp"
            android:layout_weight="0"
            android:background="#f4f9ff"
            android:src="@drawable/imgone" />


    </LinearLayout>
    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/next"
        android:layout_margin="15dp"
        android:layout_width="60dp"
        android:background="@drawable/next1"
        android:layout_height="35dp"
        />

    <Button
        android:id="@+id/back_r1a"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>

